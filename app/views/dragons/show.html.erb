<h1><%=@dragon.name.capitalize%></h1>
<h3><label>Breed</label></h3>
<%=@dragon.breed%></h3>
<h3><label>Attack Power</label></h3>
<%=@dragon.attack_power%>

<h3><label>Master</label></h3>
  <%if @dragon.user == nil%>
  <h5>This Dragon Needs a Master!</h5>
  <h5>To tame this dragon, click
  <button><%=link_to'Tame This Dragon', edit_dragon_path %></button></h5>
  <%else%>
<%=link_to @dragon.user.full_name, user_path(@dragon.user)%>
  <%end%>
<br>
<br>
<button><%=link_to'Edit Dragon', edit_dragon_path %></button>
<br>
<button><%= link_to 'Delete Dragon', @user, method: :delete, data: { confirm: 'Are you sure you want to delete this dragon?'}%></button>
<br>
<button><%= link_to 'Back To All Dragons', dragons_path %></button>
